<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.c4.hero.domain.payroll.adjustment.mapper.PayrollRaiseCommandMapper">

    <update id="updateEmployeeBaseSalary" parameterType="map">
        UPDATE tbl_employee
        SET base_salary = #{baseSalary}
        WHERE employee_id = #{employeeId}
    </update>

</mapper>
